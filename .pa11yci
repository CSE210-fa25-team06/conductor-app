{
  "defaults": {
    "standard": "WCAG2AA",
    "chromeLaunchConfig": {
      "args": ["--no-sandbox"]
    }
  },
  "urls": [
    {
      "url": "http://localhost:3000/",
      "_comment" : "Tests login page."
    },
    {
      "url": "http://localhost:3000/api/auth/login",
      "_comment" : "This actually tests the dashboard page, since we are 'logged in.' Future page tests navigate from the 'dashboard' using this url."
    },
    {
      "url": "http://localhost:3000/api/auth/login",
      "actions": [
        "click element #directory",
        "wait for element .directory to be visible"
      ],
      "_comment": "Tests directory page. As it is right now, only users with elevated permissions can view this page."
    },
    {
      "url": "http://localhost:3000/api/auth/login",
      "actions": [
        "click element #attendance",
        "wait for element .attendance-container to be visible"
      ],
      "_comment": "Test attendance page."
    },
    {
      "url": "http://localhost:3000/api/auth/login",
      "actions": [
        "click element #journal",
        "wait for element .journal-overview-container to be visible"
      ],
      "_comment": "Test journal homepage."
    },
    {
      "url": "http://localhost:3000/api/auth/login",
      "actions": [
        "click element #journal",
        "wait for element .journal-overview-container to be visible",
        "click element #createJournalBtn",
        "wait for element #journal-modal to be visible"
      ],
      "_comment": "Test journal submission page."
    }, 
    {
      "url": "http://localhost:3000/api/auth/login",
      "actions": [
        "click element #profile-btn",
        "wait for element #dropdown to be visible"
      ],
      "_comment": "Test profile button."
    }
  ]
}